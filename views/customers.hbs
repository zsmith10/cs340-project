
        <div class="top-container">
            <p id="welcome-message">CUSTOMERS</p>
        </div>


    <div class="table-container">
        <table class="tables">
            <th class="table-column"></th>
            <th class="table-column"></th>

            {{#each data.[0]}}
            <th class="table-column">
                {{@key}}
            </th>
            {{/each}}

            {{#each data}}
            <tr class="table-row">
                <td class="table-column"><button onclick="window.location.href='/edit-invoices/{{this.invoice_id}}';">EDIT</button></td>
                <td class="table-column"><button class="fa fa-remove" onclick='deleteInvoice({{this.invoice_id}})'>DELETE</button></td>
                <td class="table-column">{{this.customer_id}}</td>
                <td class="table-column">{{this.customer_first_name}}</td>
                <td class="table-column">{{this.customer_last_name}}</td>
                <td class="table-column">{{this.address}}</td>
                <td class="table-column">{{this.city}}</td>
                <td class="table-column">{{this.state}}</td>
                <td class="table-column">{{this.zip}}</td>
                <td class="table-column">{{this.phone_number}}</td>
                <td class="table-column">{{this.email}}</td>
            </tr>
            {{/each}}
        </table>

        <div class="change-data-btn-container">
            <button id="add-button">Add Customer</button>
            <button id="change-button">Edit Customer</button>
        </div>
    </div>

