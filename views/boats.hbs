

    <div class="top-container">
        <p id="welcome-message">BOATS</p>
    </div>

    <div class="table-container">
        <table class="tables" id="boat-table">

            <th class="table-column"></th>
            <th class="table-column"></th>

            {{#each data.[0]}}
            <th class="table-column">
                {{@key}}
            </th>
            {{/each}}

            {{#each data}}
            <tr class="table-row" data-value={{this.boat_id}}>
                <td class="table-column"><button onclick="window.location.href='/edit-boats/{{this.boat_id}}';">EDIT</button></td>
                <td class="table-column"><button onclick="deleteBoat({{this.boat_id}})">DELETE</button></td>
                <td class="table-column">{{this.boat_id}}</td>
                <td class="table-column">{{this.make}}</td>
                <td class="table-column">{{this.model}}</td>
                <td class="table-column">{{this.year}}</td>
                <td class="table-column">{{this.price}}</td>
                <td class="table-column">{{this.date_serviced}}</td>
                <td class="table-column">{{this.serviced_by}}</td>
            </tr>
            {{/each}}
        </table>

        <script src="./js/delete-boat.js"></script>

        <div class="change-data-btn-container">
            <button id="add-button">Add Boat</button>
        </div>
    </div>

    <div class="form-container" id="add-boat-modal"> 
        <form class="BoatForm" id="add-boat-form-ajax">
            <legend id="boat-legend"><strong>ADD BOAT</strong></legend>
                <fieldset class="fields">
                    <div id="add-boat-text">
                        <label> Make </label> <input type="text" id="input-make" name="input-make">
                    </div>
                        
                    <div id="add-boat-text">
                        <label> Model </label> <input type="text"  id="input-model" name="input-model">
                    </div>
                        
                    <div id="add-boat-text">
                        <label> Year </label> <input type="text" id="input-year" name="input-year">
                    </div>

                    <div id="add-boat-text">
                        <label> Price </label> <input type="text" id="input-price" name="input-price">
                    </div>

                    <div id="add-boat-text">
                        <label> Date Serviced </label> <input type="text" id="input-date_serviced" name="input-date_serviced">
                    </div>

                    <div id="add-boat-text">
                        <label> Serviced By </label> <input type="text" id="input-serviced_by" name="input-serviced_by">
                    </div>

                </fieldset>
         
            <div id="add-boat-btn-container">
                <input class="btn" type="submit" id="boat-form-btn" value="Add Boat">
                <input class="btn" type="button" id="boat-cancel-button" value="Cancel" >
            </div>
        </form> 
    </div>

    <script src="./js/add-boat.js"></script>
    <script src="./js/delete-boat.js"></script>

    <div class="form-container" id="update-boat-modal"> 
        <form class="BoatForm">
            <legend id="boat-legend"><strong>UPDATE BOAT</strong></legend>
                <fieldset class="fields">
                    <div id="add-boat-text">
                        <label> Boat ID</label> <input type="text" name="boat_id">
                    </div>

                    <div id="add-boat-text">
                        <label> Make </label> <input type="text" name="make">
                    </div>
                        
                    <div id="add-boat-text">
                        <label> Model </label> <input type="text"  name="model">
                    </div>
                        
                    <div id="add-boat-text">
                        <label> Year </label> <input type="text" name="year">
                    </div>

                    <div id="add-boat-text">
                        <label> Price </label> <input type="text" name="price">
                    </div>

                    <div id="add-boat-text">
                        <label> Date Serviced </label> <input type="text" name="date_serviced">
                    </div>

                    <div id="add-boat-text">
                        <label> Serviced By </label> <input type="text" name="serviced_by">
                    </div>

                </fieldset>
          
            <div id="add-boat-btn-container">
                <input class="btn" type="submit" id="boat-form-btn" value="Update Boat">
                <input class="btn" type="button" id="edit-cancel" value="Cancel">
            </div>
        </form>     

        <script src="./js/update_boat.js"></script>
    </div>